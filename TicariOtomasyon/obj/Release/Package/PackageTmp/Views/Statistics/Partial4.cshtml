@model IEnumerable<TicariOtomasyon.Models.Class.Class3Group>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Product Brand Table</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Brand</th>
                    <th>Progress</th>
                    <th style="width: 40px">Quanlity</th>
                </tr>
            </thead>
            <tbody>
                @{ int no = 0;}
                @{ int y = 0;}

                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{no++;} @no</td>
                        <td>@x.Brand</td>
                        <td>
                            @if (x.Count_ >= 1 && x.Count_<= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width:45% "></div>
                                </div>
                            }
                            @if (x.Count_ >= 4 && x.Count_ <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width:70%"></div>
                                </div>
                            }
                            @if (x.Count_ >=7)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width:55% "></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Count_ == 1)
                            {<span class="badge bg-danger">@x.Count_</span>}
                            @if (x.Count_ == 2)
                            {<span class="badge bg-warning">@x.Count_</span>}
                            @if (x.Count_ == 3)
                            {<span class="badge bg-success">@x.Count_</span>}
                        </td>
                        }
                    </tr>
                }
            </tbody>
           

        </table>
    </div>
    <!-- /.card-body -->
</div>

