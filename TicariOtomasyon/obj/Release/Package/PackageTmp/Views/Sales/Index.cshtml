@using TicariOtomasyon.Models.Class
@model List<SalesAction>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View1.cshtml";
}

<h2>Index</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Current</th>
            <th>Employee</th>
            <th>Piece</th>
            <th>Price </th>
            <th>Total Amount</th>
            <th>Date</th>
            <th>Update</th>
            <th>Detail</th>
            <th>make a sale</th>

        </tr>
    </thead>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.SalesActionId</td>
            <td>@p.Productiid</td>
            <td>@p.Currentiid</td>
            <td>@p.Employeeiid</td>
            <td>@p.Piece</td>
            <td>@p.Price</td>
            <td>@p.TotalAmount</td>
            <td>@p.Date_</td>



            <td>
                <a href="/Sales/NewBring/@p.SalesActionId" class="btn btn-danger">Update</a>
            </td>
            <td>
                <a href="/Sales/SalesDetail/@p.SalesActionId" class="btn btn-success">Detail</a>
            </td>
            <td>
                <a href="/Product/Makeasale/" class="btn btn-default" style="background-color:#0094ff">make a sale</a>
            </td>
        </tr>
    }
</table>
<a href="/Sales/NewSell/ " class="btn btn-info">New Sell</a>
