@model TicariOtomasyon.Models.Class.Class4
@{
    ViewBag.Title = "Attempt";
    Layout = "~/Views/Shared/View1.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>

    $(function () {

        $('#DrpCategory').change(function () {

            var id = $('#DrpCategory').val();

            $.ajax({

                url: '/Category/ProductBring',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DrpProduct').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DrpProduct').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>
<div>
    <h2>Categorys - Products</h2>
</div>
<br />
<div>
    @Html.Label("Categorys")
    @Html.DropDownList("DrpCategory", Model.Categorys, "---Category select",new {@class= "form-control" })
</div>
<br />
<div>
    @Html.Label("Product")
    @Html.DropDownList("DrpProduct",Model.Products, "---Product select",new {@class="form-control"})
</div>