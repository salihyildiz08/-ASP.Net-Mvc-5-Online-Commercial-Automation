@using TicariOtomasyon.Models.Class,
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View1.cshtml";
}
<table class="table table-bordered" style="margin-top:20px">
    <tr>
       
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var c in Model)
    {

<tr>
    
    <td>
        @c.CategoryNAme 
    </td>
    <td><a href="/Category/CategoryDelete/@c.CategoryID" class="btn btn-danger">Delete</a></td>
    <td><a href="/Category/CategoryBring/@c.CategoryID" class="btn btn-success">Update</a></td>
</tr>

    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page})
,new PagedListRenderOptions
{
    LiElementClasses=new List<String>
    { "page-link"}
})

<a href="/Category/CategoryInsert" class="btn btn-primary">Category Insert</a>





