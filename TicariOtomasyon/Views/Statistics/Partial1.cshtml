@model IEnumerable<TicariOtomasyon.Models.Class.Class2Group>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Deparment Table</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Task</th>
                    <th>Progress</th>
                    <th style="width: 40px">Quanlity</th>
                </tr>
            </thead>
            <tbody>
                @{ int no = 0;}
                @{ int y = 0;}
               
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{no++;} @no</td>
                        <td>@x.Departmen</td>
                        <td>
                            @if (x.Qunlity == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width:45% "></div>
                                </div>
                            }
                            @if (x.Qunlity == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width:70%"></div>
                                </div>
                            }
                            @if (x.Qunlity == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width:55% "></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Qunlity == 1)
                            {<span class="badge bg-danger">@x.Qunlity</span>}
                            @if (x.Qunlity == 2)
                            {<span class="badge bg-warning">@x.Qunlity</span>}
                            @if (x.Qunlity == 3)
                            {<span class="badge bg-success">@x.Qunlity</span>}
                        </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
