                                                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                                            </div>
                                                        }
                                                        @if (x.Count_ == 2)
                                                        {
                                                            <div class="progress progress-xs">
                                                                <div class="progress-bar bg-warning" style="width: 55%"></div>
                                                            </div>
                                                        }
                                                        @if (x.Count_ == 3)
                                                        {
                                                            <div class="progress progress-xs">
                                                                <div class="progress-bar bg-success" style="width: 55%"></div>
                                                            </div>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (x.Count_ == 1)
                                                        {<span class="badge bg-danger">@x.Count_</span>}
                                                        @if (x.Count_ == 2)
                                                        {<span class="badge bg-warning">@x.Count_</span>}
                                                        @if (x.Count_ == 3)
                                                        {<span class="badge bg-success">@x.Count_</span>}
                                                    </td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
