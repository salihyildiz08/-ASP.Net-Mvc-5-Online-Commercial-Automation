@model TicariOtomasyon.Models.Class.Employee
@{
    ViewBag.Title = "EmployeeBring";
    Layout = "~/Views/Shared/View1.cshtml";
}

<h2>Employee Bring</h2>
@using (Html.BeginForm("EmployeeUpdate", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    {
    <div class="form-group">
        @Html.HiddenFor(x => x.EmployeeId)
        @Html.LabelFor(x => x.EmployeeName)
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.EmployeeSurname)
        @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
        <br />

        @Html.LabelFor(x => x.EmployeeImage)
        @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
        <br />
        <input type="file" name="EmployeeImage" />

        @Html.LabelFor(x => x.Department)

        @Html.DropDownListFor(x => x.Departmentiid, (List<SelectListItem>)ViewBag.vlu1, new
        { @class = "form-control" })
        <button class=" btn btn-default">Update</button>


    </div>
    }
}


